###定义一个检查是否是闰年的函数
def is_rn():
 x=input('请输入年份:')
 if int(x)%4==0 or int(x)%400==0 :
    return print('您输入的年份是闰年。')
 else:
    return print('非闰年')
is_rn()


#####输入一个数字，计算各个位数上的数字之和
def add_str_num():
  x=input('请输入您的数字:')
  y=len(x)
  i=0
  z=0
  for i in range(len(x)):
    z=int(x[i])+z
  print(z)

add_str_num()



